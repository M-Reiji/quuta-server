{
    "openapi": "3.0.0",
    "info": {
        "title": "Quuta API v1",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "ログイン",
                "description": "メールアドレスとパスワードでログイン",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "認証情報をいれる",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "quuta@quuta.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "quuta12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "認証情報が間違っている",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "description": "Bearerで認証する"
            }
        }
    }
}