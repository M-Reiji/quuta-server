{
    "openapi": "3.0.0",
    "info": {
        "title": "Quuta API v1",
        "version": "1.0.0"
    },
    "paths": {
        "/api/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "ログイン",
                "description": "メールアドレスとパスワードでログイン",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "認証情報をいれる",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "quuta@quuta.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "quuta12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "認証情報が間違っている",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/api/home_timeline": {
            "get": {
                "tags": [
                    "post"
                ],
                "summary": "ホームタイムライン取得",
                "description": "ログインユーザ用のタイムラインを取得する",
                "operationId": "getHomeTimeline",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/timeline_get_since_id"
                    },
                    {
                        "$ref": "#/components/parameters/timeline_get_until_id"
                    },
                    {
                        "$ref": "#/components/parameters/timeline_get_count"
                    }
                ],
                "responses": {
                    "401": {
                        "description": "認証されていない"
                    },
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        },
        "/api/user_timeline": {
            "get": {
                "tags": [
                    "post"
                ],
                "summary": "ユーザタイムライン取得",
                "description": "特定のユーザごとの投稿を取得する",
                "operationId": "getUserTimeline",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/timeline_get_user_id"
                    },
                    {
                        "$ref": "#/components/parameters/timeline_get_since_id"
                    },
                    {
                        "$ref": "#/components/parameters/timeline_get_until_id"
                    },
                    {
                        "$ref": "#/components/parameters/timeline_get_count"
                    }
                ],
                "responses": {
                    "401": {
                        "description": "認証されていない"
                    },
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearer": []
                    }
                ]
            }
        }
    },
    "components": {
        "parameters": {
            "timeline_get_since_id": {
                "name": "since_id",
                "in": "query",
                "description": "投稿のid、これ以降に投稿された投稿を取得する",
                "example": "1"
            },
            "timeline_get_until_id": {
                "name": "until_id",
                "in": "query",
                "description": "投稿のid、これ以前に投稿された投稿を取得する",
                "example": "30"
            },
            "timeline_get_count": {
                "name": "count",
                "in": "query",
                "description": "取得する投稿の数、 デフォルト10、最大50",
                "example": "20"
            },
            "timeline_get_user_id": {
                "name": "user_id",
                "in": "query",
                "description": "取得するユーザのid",
                "required": true
            }
        },
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "description": "Bearerで認証する"
            }
        }
    }
}